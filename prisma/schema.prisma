generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @db.Uuid
  displayName String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  email       String?  @unique

  // Friends relations
  friendOf Friend[] @relation("FriendUsers")
  friends  Friend[] @relation("UserFriends")

  // Sleep Data
  sleepNights SleepNight[]

  // --- FIX: Clan/Group Relation goes here ---
  groupId String? @db.Uuid
  group   Group?  @relation(fields: [groupId], references: [id])
}

model SleepNight {
  id                String   @id @default(uuid()) @db.Uuid
  userId            String   @db.Uuid
  date              DateTime
  totalSleepMinutes Int
  score             Int
  createdAt         DateTime @default(now())
  deepSleepMinutes  Int      @default(0)
  remSleepMinutes   Int      @default(0)
  user              User     @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}

model Friend {
  id        String   @id @default(uuid()) @db.Uuid
  userId    String   @db.Uuid
  friendId  String   @db.Uuid
  createdAt DateTime @default(now())
  friend    User     @relation("FriendUsers", fields: [friendId], references: [id])
  user      User     @relation("UserFriends", fields: [userId], references: [id])
  // --- REMOVED GROUP FIELDS FROM HERE ---

  @@unique([userId, friendId])
}

model Group {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @unique
  createdAt DateTime @default(now())

  // Members relation back to User
  members User[]
}
